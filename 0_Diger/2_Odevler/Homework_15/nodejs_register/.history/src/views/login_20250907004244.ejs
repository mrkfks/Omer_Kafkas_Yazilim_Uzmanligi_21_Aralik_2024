<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include('template/bootstrap') %>
  </head>
  <body>
    <div class="container mt-3">
      <div class="row">
        <div class="col-sm-6">
          <h3>User Login</h3>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label required for="email" class="form-label">Email</label>
              <input
                required
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label required for="password" class="form-label">Password</label>
              <input
                required
                type="password"
                class="form-control"
                id="password"
                name="password"
              />
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
            

          </form>
        </div>
        <div class="col-sm-6 d-none d-sm-block">
          <div
            class="d-flex justify-content-center align-items-center"
            style="height: 100%"
          >
            <i
              class="bi bi-person-fill border border-dark rounded p-1"
              style="font-size: 7em; color: gray"
            ></i>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
